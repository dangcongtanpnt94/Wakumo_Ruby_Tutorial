<%= form_with(model: member, local: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :member_name %>
  </div>

  <div class="field">
    <%= form.label :dob %>
    <%= form.date_select :dob,:start_year => Date.current.year, :end_year => 1970, id: :member_dob %>
  </div>

  <% gender = {"Male" => "Male", "Female" => "Female"} %>
  <div class="field">
    <%= form.label :gender %>
    <%= form.select :gender, gender, selected: member.gender %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :email %>
  </div>

<% role = {"Admin" => "Admin", "Guest" => "Guest"} %>
  <div class="field">
    <%= form.label :role %>
    <%= form.select :role, role, selected: member.role%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
